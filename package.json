    "@payloadcms/richtext-lexical": "3.55.1",
    "@payloadcms/storage-s3": "^3.55.1",
    "@payloadcms/ui": "3.55.1",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "dotenv": "16.4.7",
    "framer-motion": "^12.23.12",
    "graphql": "^16.8.1",
    "lucide-react": "^0.542.0",
    "next": "15.5.9",
    "next-intl": "^4.3.5",
    "payload": "3.55.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
